{# Макрос вывода ссылок тегов в строку через запятую из массива &euro; &#8381; #}
{% macro taglist(tags) %}
<p>
    {% for tag in tags %}
        {% for key, word in tag %}
            {% if not loop.last %}
                <a href="/?page={{ key }}">{{ word }}</a>,
            {% else %}
                <a href="/?page={{ key }}">{{ word }}</a>
            {% endif %}
        {% endfor %}
    {% endfor %}
</p>
{% endmacro %}

{# Макрос вывода дополнительных товаров для просмотра в Карточке товара #}
{% macro additiongoods(tag_id) %}
    <div class="row">
        {% set addgoods = add_goods(tag_id) %}
        {% for item in addgoods %}
            <div class="col-xs-12 col-md-3 col-lg-3">
                <!-- вывод всех товаров-->
                {% include 'listitem.html' %} <!-- подключаем шаблон для вывода единицы товара -->
            </div>

        {% endfor %}
    </div>
{% endmacro %}